# FLIONE main .htaccess for production

# Enable Rewrite Engine
RewriteEngine On

# (Removed redirect rules to flionetech.com)

# Security: block access to hidden files and sensitive files
<FilesMatch "^\.(env|git|ht|svn|DS_Store)">
  Require all denied
</FilesMatch>
<Files ".env">
  Require all denied
</Files>
<FilesMatch "^(composer\.json|composer\.lock|package\.json|webpack\.config\.js|README\.md|LICENSE)$">
  Require all denied
</FilesMatch>

# Disable directory listing
Options -Indexes

# MIME types safety
AddType text/javascript .js
AddType text/css .css

# Security headers (lightweight, low-risk)
<IfModule mod_headers.c>
  Header set X-Content-Type-Options "nosniff"
  Header set X-Frame-Options "SAMEORIGIN"
  Header set Referrer-Policy "strict-origin-when-cross-origin"
  Header set X-XSS-Protection "1; mode=block"
  # Customize HSTS if you are sure of HTTPS-only on subdomains
  Header always set Strict-Transport-Security "max-age=15552000; includeSubDomains; preload"
</IfModule>

# Compression
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/plain text/html text/xml text/css text/javascript application/javascript application/json application/xml image/svg+xml
</IfModule>

# Cache static assets aggressively
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType text/javascript "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType image/ico "access plus 1 year"
  ExpiresByType image/icon "access plus 1 year"
  ExpiresByType image/x-icon "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
</IfModule>

# Prevent serving of PHP source if handler misconfigured
<FilesMatch "\.(phps|phtml|php~|php\.bak)$">
  Require all denied
</FilesMatch>
